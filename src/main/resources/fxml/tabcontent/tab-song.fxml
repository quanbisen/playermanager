<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.control.Label?>
<StackPane fx:id="root" prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controller.content.TabSongController">
    <children>
        <BorderPane>
            <top>
                <HBox alignment="CENTER" prefHeight="60.0" prefWidth="600.0" spacing="20.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="btnAdd" mnemonicParsing="false" text="新增" onMouseClicked="#onClickedAdd"/>
                        <Button fx:id="btnModify" mnemonicParsing="false" text="修改" onMouseClicked="#onClickedModify"/>
                        <Button fx:id="btnDelete" mnemonicParsing="false" onMouseClicked="#onClickedDelete" text="删除" />
                        <Button fx:id="btnQuery" mnemonicParsing="false" onMouseClicked="#onClickedQuery" text="查询" />
                        <Button fx:id="btnRefresh" mnemonicParsing="false" onMouseClicked="#onClickedRefresh" text="刷新" />
                    </children>
                </HBox>
            </top>
            <center>
                <TableView fx:id="tableViewSong" prefHeight="340.0" prefWidth="645.0" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="columnID" prefWidth="57.0" text="ID" />
                        <TableColumn fx:id="columnName" prefWidth="97.0" text="歌名" />
                        <TableColumn fx:id="columnSinger" prefWidth="128.0" text="歌手" />
                        <TableColumn fx:id="columnAlbum" prefWidth="101.0" text="专辑" />
                        <TableColumn fx:id="columnTotalTime" prefWidth="105.0" text="时长" />
                        <TableColumn fx:id="columnSize" prefWidth="109.0" text="大小" />
                    </columns>
                    <placeholder>
                        <Label text="" />
                    </placeholder>
                </TableView>
            </center>
        </BorderPane>
      <ProgressIndicator fx:id="progressIndicator" maxHeight="20.0" maxWidth="20.0" />
    </children>

</StackPane>
